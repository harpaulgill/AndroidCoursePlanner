<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thinkpad.androidcourseplanner.MainCourseActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/yearOneTermOneButton"
        android:text="@string/button1"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="48dp"
        android:onClick="goToCourseList" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/yearOneTermTwoButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:onClick="goToCourseList"
        android:text="@string/button2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/yearOneTermOneButton"/>

</android.support.constraint.ConstraintLayout>
