<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thinkpad.androidcourseplanner.MainCourseActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/yearOneTermOne"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:onClick="goToCourseList"
        android:text="@string/button1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/yearOneTermTwo"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:onClick="goToCourseList"
        android:text="@string/button2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ListView
        android:id="@+id/yearOneTermOneListView"
        android:layout_width="125dp"
        android:layout_height="195dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearOneTermOne"/>

    <ListView
        android:id="@+id/yearOneTermTwoListView"
        android:layout_width="125dp"
        android:layout_height="195dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearOneTermTwo"/>

</android.support.constraint.ConstraintLayout>
