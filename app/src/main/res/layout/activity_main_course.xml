<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thinkpad.androidcourseplanner.MainCourseActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/yearOneTermOne"
        android:text="@string/button1"
        android:layout_width="90dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="goToCourseList"
        android:layout_height="48dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/yearOneTermTwo"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:onClick="goToCourseList"
        android:text="@string/button2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ListView
        android:id="@+id/yearOneTermTwoListView"
        android:layout_width="170dp"
        android:layout_height="225dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearOneTermTwo"/>

    <ListView
        android:id="@+id/yearOneTermOneListView"
        android:layout_width="170dp"
        android:layout_height="225dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearOneTermOne"
        app:layout_constraintVertical_bias="0.045"
        app:layout_constraintRight_toLeftOf="@+id/yearOneTermTwoListView"
        android:layout_marginRight="8dp"/>

</android.support.constraint.ConstraintLayout>
