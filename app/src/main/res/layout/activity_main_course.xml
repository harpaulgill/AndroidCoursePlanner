<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarStyle="insideInset">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:id="@+id/activity_main_course"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:context="com.example.thinkpad.androidcourseplanner.MainCourseActivity">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/yearThreeTermOne"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:onClick="goToCourseList"
            android:text="@string/button1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/yearTwoTermOneListView"
            android:layout_marginStart="32dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/yearThreeTermTwo"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginRight="32dp"
            android:onClick="goToCourseList"
            android:text="@string/button2"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/yearTwoTermTwoListView"
            android:layout_marginEnd="32dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/yearTwoTermOne"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:onClick="goToCourseList"
            android:text="@string/button1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/yearOneTermOneListView"
            android:layout_marginStart="32dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/yearTwoTermTwo"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginRight="32dp"
            android:onClick="goToCourseList"
            android:text="@string/button2"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/yearOneTermTwoListView"
            android:layout_marginEnd="32dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/yearOneTermOne"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:onClick="goToCourseList"
            android:text="@string/button1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/yearOneTermTwo"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:onClick="goToCourseList"
            android:text="@string/button2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="32dp"/>

        <ListView
            android:id="@+id/yearOneTermOneListView"
            android:layout_width="125dp"
            android:layout_height="250dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yearOneTermOne"/>

        <ListView
            android:id="@+id/yearOneTermTwoListView"
            android:layout_width="125dp"
            android:layout_height="250dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yearOneTermTwo"/>

        <ListView
            android:id="@+id/yearTwoTermOneListView"
            android:layout_width="120dp"
            android:layout_height="250dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yearTwoTermOne"/>

        <ListView
            android:id="@+id/yearTwoTermTwoListView"
            android:layout_width="120dp"
            android:layout_height="250dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yearTwoTermTwo"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>